<a href="/" class="pageTitle"><h1>THE THINGS I GOTTA DO</h1>

<h2>TO SHOW THE WHOLE FREAKIN' LIST</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Completed</th>
    </tr>
  </thead>
  <tbody>

<% obj.forEach(function (list) { %>
    <tr>
      <td><%-list.name%>
      <!-- </td> -->
      <form action = "/update/<%-list.id%>" method = "POST">
        <div class="form-group">
          <label for="name"></label>
          <input type="text" name="name" id="name" placeholder="Name">
        </div></td>
      <td><%-list.description%>
      <!-- </td> -->
      <div class="form-group">
        <label for="description"></label>
        <input type="text" name="description" id="description" placeholder="description">
      </div></td>
      <td><%-list.completed%>
      <!-- </td> -->
      <div class="form-group">
        <label for="completed"></label>
        <input type="text" name="completed" id="completed" placeholder="completed">
      </div></td>
      <td><%-list.id%></td>
      <td><button name = "id" value = <%-list.id%> type = "submit">Update</button></td>
    </form></td>
    <td><form method="POST" action="/<%-list.id%>?_method=DELETE">
        <button value= <%-list.id%> name = "id" type = "submit">Remove</button></td>
    </form>
    </tr>
  <% })%>
